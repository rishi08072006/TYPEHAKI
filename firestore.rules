rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin email - single admin for TypeHaki
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'sathwikprabhu07@gmail.com';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      // Admin can read all profiles
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile (on first login)
      allow create: if isOwner(userId);
      
      // Users can update their own profile, but cannot change their role
      allow update: if isOwner(userId) && 
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      // Admin can update any user (including role)
      allow update: if isAdmin();
      
      // No one can delete user profiles
      allow delete: if false;
    }
    
    // Rounds collection
    match /rounds/{roundId} {
      // Anyone authenticated can read rounds
      allow read: if isAuthenticated();
      
      // Only admin can create, update, delete rounds
      allow create, update, delete: if isAdmin();
    }
    
    // Registrations collection
    match /registrations/{registrationId} {
      // Users can read their own registrations
      // Admin can read all registrations
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can create registrations for themselves
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Only admin can update registrations (for payment status, etc.)
      allow update: if isAdmin();
      
      // No one can delete registrations
      allow delete: if false;
    }
    
    // Payments collection
    match /payments/{paymentId} {
      // Users can read their own payments
      // Admin can read all payments
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Payments are created by Cloud Functions only
      // No direct client writes allowed
      allow create, update, delete: if false;
    }
    
    // Attempts collection (typing test results)
    match /attempts/{attemptId} {
      // Anyone authenticated can read attempts (for leaderboard)
      allow read: if isAuthenticated();
      
      // Users can create attempts for themselves
      // One attempt per user per round is enforced in Cloud Functions
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // No one can update or delete attempts
      allow update, delete: if false;
    }
  }
}
